<h1>アイデア投稿</h1>

<h3>
  <%= form_for Recipeidea.new do |f| %>
    <%= f.label :title, "料理名" %><br>
    <%= f.text_field :title %><br><br>
    <%= f.label :content, "アイデアの内容" %><br>
    <%= f.text_area :content, :size => "60 x 20"%><br><br>
    <%= f.submit "投稿", class: "btn btn-info"%>
    <%= link_to '戻る', recipes_path %>
  <% end %>
</h3>
